@model IEnumerable<Tukkan.Models.Product>

@{ ViewData["Title"] = "Ürünler"; ViewData["ActiveTab"] = "Products"; }

<h2>Ürün Listesi</h2> <div class="product-list"> @foreach (var product in Model) { <div class="product-item"> <img src="@product.ImageUrl" alt="@product.Name" /> <h3>@product.Name</h3> <p>@product.Description</p> <p>Fiyat: @product.Price</p> <form asp-action="AddToCart" method="post"> <input type="hidden" name="productId" value="@product.Id" /> <button type="submit">Sepete Ekle</button> </form> </div> } </div> ```