@model List<Tukkan.Models.Product>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Ürünler</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <div class="container">
        <h2>Ürünler</h2>

        <!-- Kategori filtreleme bağlantıları -->
        <div>
            <a asp-action="Index" asp-route-category="Elektronik">Elektronik</a> |
            <a asp-action="Index" asp-route-category="Kitap">Kitap</a> |
            <a asp-action="Index" asp-route-category="Giyim">Giyim</a> |
            <a asp-action="Index">Tüm Ürünler</a>
        </div>

        <div class="product-list">
            @foreach (var product in Model)
            {
                    <div class="product-item">
                        <a asp-action="Details" asp-route-id="@product.Id" style="text-decoration: none; color: inherit;">
                            <img src="@product.ImageUrl" alt="@product.Name" style="max-width: 100%; height: auto;" />
                            <h3>@product.Name</h3>
                            <p>Fiyat: @product.Price.ToString("C")</p>
                            <p>Kategori: @product.Category</p>
                        </a>
                        <form asp-action="AddToCart" method="post">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <button type="submit" class="btn">Sepete Ekle</button>
                        </form>
                    </div>
            }
        </div>
    </div>
</body>
</html>
