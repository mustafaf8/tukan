@model Tukkan.Models.Product

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@Model.Name - Detaylar</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <div class="container">
        <h2>@Model.Name</h2>
        <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 300px; height: auto;" />
        <p><strong>Fiyat:</strong> @Model.Price.ToString("C")</p>
        <p><strong>Kategori:</strong> @Model.Category</p>
        <p><strong>Açıklama:</strong> @Model.Description</p>
        <p><strong>Stok:</strong> @Model.Stock</p>
        <form asp-action="AddToCart" method="post">
            <input type="hidden" name="productId" value="@Model.Id" />
            <button type="submit" class="btn">Sepete Ekle</button>
        </form>
        <a href="@Url.Action("Index", "Products")">Geri Dön</a>
    </div>
</body>
</html>
