@model Tukkan.Models.Product

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@Model.Name - Detaylar</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
   
<style>
   .container{
        margin-top:20px;
        text-align:center;
   }

    .container img {
       width:300px;
            height: 300px;
           
    }
    
    .detail {
        box-shadow: 2px 2px 2px 2px rgba(0, 0, 0, 0.2); /* Gölgelendirme */
        border-radius: 5px;
        
        padding:30px;
    }

    .a {
        
        
    }
    

   
</style>
<body>
    <div class="container" style="display:flex, gap:10px">
        
       
        <div  class="detail" >
            <div style="text-align:left">
             
                <button type="submit" class="btn"><a style="text-decoration:none;" href="@Url.Action("Index", "Products")">Geri Don</a></button>
            </div>
            
                <img style="border-radius:5px;" src="https://picsum.photos/seed/picsum/200/300" alt="@Model.Name" />
            
            
        <div>
                <div>
                    <p><strong>Fiyat:</strong> @Model.Price.ToString("C")</p>
                    <p><strong>Kategori:</strong> @Model.Category</p>
                    <p><strong>Açıklama:</strong> @Model.Description</p>
                    <p><strong>Stok:</strong> @Model.Stock</p>
                </div>
                <br />
                <div>
                    <form asp-action="AddToCart" method="post">
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <button style="background-color:orange;" type="submit" class="btn">Sepete Ekle</button>
                    </form>
                </div>
        </div>
        
        
        </div>
        
    <div>
    </div>
</body>
</html>
