<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Ticaret Uygulaması</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <header>
            <h1>E-Ticaret Uygulaması</h1>
        </header>

        <!-- Tabbar -->
        <div class="tabbar">
            <a href="@Url.Action("Index", "Products")" class="@(ViewData["ActiveTab"] == "Products" ? "active" : "")">Ürünler</a>
            <a href="@Url.Action("Cart", "Products")" class="@(ViewData["ActiveTab"] == "Cart" ? "active" : "")">Sepet</a>
        </div>

        <div class="content">
            @RenderBody()
        </div>
    </div>


</body>
</html>
